# ===========================================
# RG Family Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# cp .env.example .env.local

# -------------------------------------------
# Supabase Configuration (Required)
# -------------------------------------------
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
#
# New key format (2025+): sb_publishable_xxx, sb_secret_xxx
# Legacy format: eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=sb_publishable_xxx

# Service Role Key (Server-side only - NEVER expose to client)
# Required for admin operations (CSV upload, data management)
SUPABASE_SERVICE_ROLE_KEY=sb_secret_xxx

# -------------------------------------------
# Development Options
# -------------------------------------------
# Set to 'true' to use mock data without Supabase connection
# Set to 'false' for production or when using real Supabase data

NEXT_PUBLIC_USE_MOCK_DATA=false

# Mock Admin Credentials (Development only)
# These are used when USE_MOCK_DATA=true
# Comma-separated list of admin email addresses
NEXT_PUBLIC_MOCK_ADMIN_EMAILS=admin,admin@rgfamily.com
# Mock admin password (only used in mock mode)
NEXT_PUBLIC_MOCK_ADMIN_PASSWORD=admin123

# -------------------------------------------
# API Security
# -------------------------------------------
# Secret key for live status update API (crawler authentication)
# IMPORTANT: Use a strong 64-character hex string for production
# Generate with: openssl rand -hex 32
LIVE_STATUS_API_SECRET=your-secure-random-string-minimum-32-chars

# Sync secret for cron jobs (Vercel Cron/external scheduler)
# Generate with: openssl rand -hex 32
LIVE_STATUS_SYNC_SECRET=your-cron-secret-minimum-32-chars

# -------------------------------------------
# Cloudinary (Image Upload)
# -------------------------------------------
# Get these from: https://console.cloudinary.com/settings/api-keys
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# -------------------------------------------
# Optional: Analytics & Monitoring
# -------------------------------------------
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@sentry.io/xxx
