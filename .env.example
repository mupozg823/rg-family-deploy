# ===========================================
# RG Family Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# cp .env.example .env.local

# -------------------------------------------
# Supabase Configuration (Required)
# -------------------------------------------
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Service Role Key (for DB seeding script - DO NOT expose in client code)
# Get from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# -------------------------------------------
# Development Options
# -------------------------------------------
# Set to 'true' to use mock data without Supabase connection
# Set to 'false' for production or when using real Supabase data

NEXT_PUBLIC_USE_MOCK_DATA=true

# -------------------------------------------
# Optional: Analytics & Monitoring
# -------------------------------------------
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@sentry.io/xxx
